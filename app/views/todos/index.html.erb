<!DOCTYPE html>
<html>
  <head>
    <title>Todos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <h1>Todos</h1>
    <%= link_to "Add a new todo", new_todo_path %>
    <ul class="todos">
      <% @todos.each do |todo| %>
        <li><%= todo.title %></li>
      <% end %>
    </ul>

  </body>
</html>
